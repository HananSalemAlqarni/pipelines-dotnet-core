pipeline {
    agent any
    stages {
        stage('Validate') {
            steps {

                sh "dotnet restore"
            }
        }
        stage('Test') {
            steps {
                
                sh "dotent test"

            }
        stage('Bulid') {
            steps {

                sh "dotnet build "
            }
        }
        stage('Package Publish') {
            steps {

                sh "dotnet publish "
            }


            post {
                success {
                    archiveArtifacts artifacts: '**/bin/Debug/net6.0/**.dll', followSymlinks: false
                }
            }
        }
    }
}
}